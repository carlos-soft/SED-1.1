<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <!-- Configurar JSF con Spring -->
    <application>
        <el-resolver>
            org.springframework.web.jsf.el.SpringBeanFacesELResolver
        </el-resolver>
    </application>
    
    <!-- ManagedBeans -->
    <managed-bean>
        <managed-bean-name>evaluacionBean</managed-bean-name>
        <managed-bean-class>jsf.beans.EvaluacionBean</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
        <managed-property>
            <property-name>evaluacionBO</property-name>
            <value>#{evaluacionBO}</value>
        </managed-property>
        <managed-property>
            <property-name>gruposBO</property-name>
            <value>#{gruposBO}</value>
        </managed-property>
    </managed-bean>
    
    <managed-bean>
        <managed-bean-name>subirArchivoBean</managed-bean-name>
        <managed-bean-class>jsf.beans.SubirArchivoBean</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
        <managed-property>
            <property-name>evaluacionBO</property-name>
            <value>#{evaluacionBO}</value>
        </managed-property>
        <managed-property>
            <property-name>docentesBO</property-name>
            <value>#{docentesBO}</value>
        </managed-property>
        <managed-property>
            <property-name>gruposBO</property-name>
            <value>#{gruposBO}</value>
        </managed-property>
        <managed-property>
            <property-name>alumnosBO</property-name>
            <value>#{alumnosBO}</value>
        </managed-property>
    </managed-bean>
    
    <managed-bean>
        <managed-bean-name>preguntasBean</managed-bean-name>
        <managed-bean-class>jsf.beans.PreguntasBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>preguntasBO</property-name>
            <value>#{preguntasBO}</value>
        </managed-property>
    </managed-bean>
</faces-config>
